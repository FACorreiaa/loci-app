# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5454
POSTGRES_DB=loci_templui
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password_here
POSTGRES_SSLMODE=disable

# Server Configuration
SERVER_PORT=8091

# OpenTelemetry Configuration
OTEL_SERVICE_NAME=loci-templui
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_EXPORTER_OTLP_PROTOCOL=http/protobuf
OTEL_RESOURCE_ATTRIBUTES=service.name=loci-templui,service.version=1.0.0
OTEL_LOG_LEVEL=info

# Observability
METRICS_ENDPOINT=:9090

# JWT Authentication (for WebSocket and API security)
# IMPORTANT: Generate a secure secret key (minimum 32 characters) for production
# You can generate one with: openssl rand -base64 32
JWT_SECRET_KEY=your-super-secret-jwt-key-minimum-32-characters-long-change-this-in-production

# AI/LLM Configuration (optional - for POI recommendations)
# GEMINI_API_KEY=your-gemini-api-key-here