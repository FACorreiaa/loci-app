							<div class="w-5 h-5 border-2 border-white border-t-transparent rounded-full animate-spin"></div>
							Creating...
						</span>
					</button>
				</div>
			</form>
		</div>
	</div>
}

// AddToListModal shows a modal for selecting which list to add an item to
templ AddToListModal(itemID, itemName, contentType string, userLists []models.List) {
	<div class="fixed inset-0 bg-black/50 backdrop-blur-sm flex items-center justify-center z-50 p-4" id="add-to-list-modal">
		<!-- Modal container -->
		<div class="bg-card rounded-lg max-w-md w-full shadow-2xl animate-in fade-in zoom-in duration-200">
			<!-- Header -->
			<div class="flex items-center justify-between p-6 border-b border-border">
				<div class="flex items-center gap-3">
					<div class="w-10 h-10 bg-gradient-to-r from-blue-500 to-indigo-500 rounded-lg flex items-center justify-center">
						<svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
						</svg>
					</div>
					<div class="flex-1 min-w-0">
						<h2 class="text-lg font-bold text-foreground">Add to List</h2>
						<p class="text-sm text-muted-foreground truncate">{ itemName }</p>
					</div>
				</div>
				<button
					onclick="closeAddToListModal()"
					class="p-2 text-muted-foreground hover:text-foreground rounded-lg hover:bg-accent transition-colors"
				>
					<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
					</svg>
				</button>
			</div>
			<!-- Lists -->
			<div class="p-6">
				if len(userLists) == 0 {
					<!-- Empty State -->
					<div class="text-center py-8">
						<div class="w-16 h-16 bg-gray-100 dark:bg-gray-800 rounded-full flex items-center justify-center mx-auto mb-4">
							<svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
							</svg>
						</div>
						<h3 class="text-lg font-medium text-foreground mb-2">No Lists Yet</h3>
						<p class="text-sm text-muted-foreground mb-4">Create your first list to start organizing your discoveries</p>
						<button
							hx-get="/lists/new"
							hx-target="body"
							hx-swap="beforeend"
							onclick="closeAddToListModal()"
							class="inline-flex items-center gap-2 px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors font-medium"
						>
							<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
							</svg>
							Create New List
						</button>
					</div>
				} else {
					<!-- Lists Selection -->
					<div class="space-y-2 max-h-96 overflow-y-auto">
						for _, list := range userLists {
							<button
								hx-post={ "/lists/" + list.ID.String() + "/items" }
								hx-vals={ fmt.Sprintf(`{"item_id": "%s", "content_type": "%s"}`, itemID, contentType) }
								hx-trigger="click"
								hx-indicator={ "#loading-" + list.ID.String() }
								onclick="handleAddToList(event)"
								class="w-full flex items-center justify-between p-4 border border-border rounded-lg hover:bg-accent transition-colors group"
							>
								<div class="flex items-center gap-3 flex-1 min-w-0">
									<div class="w-10 h-10 bg-gradient-to-br from-green-500 to-emerald-500 rounded-lg flex items-center justify-center flex-shrink-0">
										<svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
										</svg>
									</div>
									<div class="flex-1 min-w-0 text-left">
										<div class="flex items-center gap-2">
											<h3 class="font-medium text-foreground truncate">{ list.Name }</h3>
											if !list.IsPublic {
												<svg class="w-3 h-3 text-muted-foreground flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
													<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
												</svg>
											}
										</div>
										if list.Description != "" {
											<p class="text-sm text-muted-foreground truncate">{ list.Description }</p>
										}
									</div>
								</div>
								<div class="flex items-center gap-2">
									<span id={ "loading-" + list.ID.String() } class="htmx-indicator">
										<div class="w-5 h-5 border-2 border-green-600 border-t-transparent rounded-full animate-spin"></div>
									</span>
									<svg class="w-5 h-5 text-muted-foreground group-hover:text-green-600 transition-colors htmx-request:hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
									</svg>
								</div>
							</button>
						}
					</div>
					<!-- Create New List -->
					<div class="mt-4 pt-4 border-t border-border">
						<button
							hx-get="/lists/new"
							hx-target="body"
							hx-swap="beforeend"
							onclick="closeAddToListModal()"
							class="w-full flex items-center justify-center gap-2 px-4 py-3 border-2 border-dashed border-border rounded-lg hover:border-green-500 hover:bg-green-50 dark:hover:bg-green-900/10 transition-colors text-muted-foreground hover:text-green-600 font-medium"
						>
							<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
							</svg>
							Create New List
						</button>
					</div>
				}
			</div>
		</div>
	</div>
	<script>
		function closeAddToListModal() {
			const modal = document.getElementById('add-to-list-modal');
			if (modal) {
				modal.remove();
			}
		}

		function handleAddToList(event) {
			// The HTMX request will handle the backend
			// After success, close the modal
			document.body.addEventListener('htmx:afterRequest', function handler(evt) {
				if (evt.detail.successful) {
					closeAddToListModal();
					document.body.removeEventListener('htmx:afterRequest', handler);
					// Show a success notification
					showNotification('Item added to list successfully', 'success');
				}
			}, { once: true });
		}

		// Close modal when clicking outside
		const modal = document.getElementById('add-to-list-modal');
		if (modal) {
			modal.addEventListener('click', function(e) {
				if (e.target === modal) {
					closeAddToListModal();
				}
			});
		}

