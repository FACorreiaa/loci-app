					{ string(item.ContentType) }
				</span>
			</div>
			<!-- Item Details -->
			<div class="flex-1 p-4">
				<div class="flex items-start justify-between mb-2">
					<div class="flex-1">
						<h3 class="text-lg font-semibold text-card-foreground mb-1">
