	<div class="fixed inset-0 bg-black/50 backdrop-blur-sm flex items-center justify-center z-50 p-4" id="edit-list-modal">
		<!-- Modal container -->
		<div class="bg-card rounded-lg max-w-lg w-full shadow-2xl animate-in fade-in zoom-in duration-200">
			<!-- Header -->
			<div class="flex items-center justify-between p-6 border-b border-border">
				<div class="flex items-center gap-3">
					<div class="w-10 h-10 bg-gradient-to-r from-blue-500 to-purple-500 rounded-lg flex items-center justify-center">
						<svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
						</svg>
					</div>
					<h2 class="text-xl font-bold text-foreground">Edit List</h2>
				</div>
				<button
					onclick="document.getElementById('edit-list-modal').remove()"
					class="p-2 text-muted-foreground hover:text-foreground rounded-lg hover:bg-accent transition-colors"
				>
					<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
					</svg>
				</button>
			</div>
			<!-- Form -->
			<form
				hx-put={ "/lists/" + list.ID.String() }
				hx-target="body"
				hx-swap="outerHTML"
				class="p-6 space-y-6"
			>
				<!-- List Name -->
				<div>
					<label for="edit-list-name" class="block text-sm font-medium text-foreground mb-2">
						List Name <span class="text-red-500">*</span>
					</label>
					<input
						type="text"
						id="edit-list-name"
						name="name"
						required
						value={ list.Name }
						class="w-full px-4 py-3 rounded-lg border border-border bg-background focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
					/>
				</div>
				<!-- Description -->
				<div>
					<label for="edit-list-description" class="block text-sm font-medium text-foreground mb-2">
						Description
					</label>
					<textarea
						id="edit-list-description"
						name="description"
						rows="3"
						class="w-full px-4 py-3 rounded-lg border border-border bg-background focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all resize-none"
					>{ list.Description }</textarea>
				</div>
				<!-- Privacy Toggle -->
				<div>
					<label class="block text-sm font-medium text-foreground mb-2">Privacy</label>
					<div class="grid grid-cols-2 gap-3">
						<label class="relative flex items-center p-4 border-2 border-border rounded-lg cursor-pointer hover:border-blue-500 transition-colors">
							<input type="radio" name="is_public" value="false" checked?={ !list.IsPublic } class="sr-only peer"/>
							<div class="flex items-center gap-3 w-full">
								<div class="w-10 h-10 bg-gray-100 dark:bg-gray-800 peer-checked:bg-blue-100 dark:peer-checked:bg-blue-900/30 rounded-lg flex items-center justify-center transition-colors">
									<svg class="w-5 h-5 text-gray-600 dark:text-gray-400 peer-checked:text-blue-600 dark:peer-checked:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
									</svg>
								</div>
								<div>
									<p class="font-medium text-foreground">Private</p>
									<p class="text-xs text-muted-foreground">Only you</p>
								</div>
							</div>
						</label>
						<label class="relative flex items-center p-4 border-2 border-border rounded-lg cursor-pointer hover:border-blue-500 transition-colors">
							<input type="radio" name="is_public" value="true" checked?={ list.IsPublic } class="sr-only peer"/>
							<div class="flex items-center gap-3 w-full">
								<div class="w-10 h-10 bg-gray-100 dark:bg-gray-800 peer-checked:bg-blue-100 dark:peer-checked:bg-blue-900/30 rounded-lg flex items-center justify-center transition-colors">
									<svg class="w-5 h-5 text-gray-600 dark:text-gray-400 peer-checked:text-blue-600 dark:peer-checked:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
									</svg>
								</div>
								<div>
									<p class="font-medium text-foreground">Public</p>
									<p class="text-xs text-muted-foreground">Everyone</p>
								</div>
							</div>
						</label>
					</div>
				</div>
				<!-- Actions -->
				<div class="flex items-center justify-end gap-3 pt-4 border-t border-border">
					<button
						type="button"
						onclick="document.getElementById('edit-list-modal').remove()"
						class="px-4 py-2 text-foreground hover:bg-accent rounded-lg transition-colors"
					>
						Cancel
					</button>
					<button
						type="submit"
						class="px-4 py-2 bg-gradient-to-r from-blue-600 to-purple-600 text-white rounded-lg hover:from-blue-700 hover:to-purple-700 transition-all font-medium"
					>
						Save Changes
					</button>
				</div>
			</form>
		</div>
	</div>
}

// DeleteListModal renders confirmation modal for deleting a list
templ DeleteListModal(list *models.List) {
	<div class="fixed inset-0 bg-black/50 backdrop-blur-sm flex items-center justify-center z-50 p-4" id="delete-list-modal">
		<!-- Modal container -->
		<div class="bg-card rounded-lg max-w-md w-full shadow-2xl animate-in fade-in zoom-in duration-200">
			<!-- Header -->
			<div class="flex items-center gap-3 p-6 border-b border-border">
				<div class="w-12 h-12 bg-red-100 dark:bg-red-900/30 rounded-lg flex items-center justify-center">
					<svg class="w-6 h-6 text-red-600 dark:text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
					</svg>
				</div>
				<div>
					<h2 class="text-xl font-bold text-foreground">Delete List</h2>
					<p class="text-sm text-muted-foreground">This action cannot be undone</p>
				</div>
			</div>
			<!-- Content -->
			<div class="p-6">
				<p class="text-foreground mb-2">
					Are you sure you want to delete <strong>"{ list.Name }"</strong>?
				</p>
				<p class="text-sm text-muted-foreground">
					if list.ItemCount > 0 {
						This list contains { fmt.Sprintf("%d", list.ItemCount) } 
						if list.ItemCount == 1 {
							item
						} else {
							items
						}
						. All items will be permanently removed.
					} else {
						This list is empty.
					}
				</p>
			</div>
			<!-- Actions -->
			<div class="flex items-center justify-end gap-3 p-6 border-t border-border">
				<button
					type="button"
					onclick="document.getElementById('delete-list-modal').remove()"
					class="px-4 py-2 text-foreground hover:bg-accent rounded-lg transition-colors"
				>
					Cancel
				</button>
				<button
					hx-delete={ "/lists/" + list.ID.String() }
					hx-target="body"
					hx-swap="outerHTML"
					class="px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors font-medium"
				>
					Delete List
				</button>
			</div>
		</div>
	</div>
}

// SavedListsPage displays the user's saved lists
templ SavedListsPage(lists []*models.List) {
	<div class="min-h-screen bg-gradient-to-br from-background via-background to-accent/5">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
			<!-- Header -->
			<div class="mb-8">
				<div class="flex items-center justify-between">
					<div>
						<h1 class="text-3xl font-bold text-foreground mb-2">Saved Lists</h1>
						<p class="text-muted-foreground">Lists you've saved from other users</p>
					</div>
					<a
						href="/lists"
						class="px-4 py-2 text-foreground hover:bg-accent rounded-lg transition-colors flex items-center gap-2"
					>
						<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
						</svg>
						Back to My Lists
					</a>
				</div>
			</div>
			<!-- Saved Lists Grid -->
			if len(lists) == 0 {
				<div class="bg-card rounded-xl shadow-sm border p-12 text-center">
					<div class="w-16 h-16 bg-gradient-to-r from-blue-500 to-purple-500 rounded-full flex items-center justify-center mx-auto mb-4">
						<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"></path>
						</svg>
					</div>
					<h3 class="text-lg font-semibold text-foreground mb-2">No saved lists yet</h3>
					<p class="text-muted-foreground mb-6">
						Discover and save lists from other users to access them here
					</p>
					<a
						href="/discover"
						class="inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-blue-600 to-purple-600 text-white rounded-lg hover:from-blue-700 hover:to-purple-700 transition-all font-medium"
					>
						<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
						</svg>
						Discover Lists
					</a>
				</div>
			} else {
				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
					for _, list := range lists {
						@SavedListCard(list)
					}
				</div>
			}
		</div>
	</div>
}

// SavedListCard displays a single saved list card
templ SavedListCard(list *models.List) {
	<div class="bg-card rounded-xl shadow-sm border hover:shadow-md transition-shadow">
		<div class="p-6">
			<div class="flex items-start justify-between mb-4">
				<div class="flex items-center gap-3">
					<div class="w-12 h-12 bg-gradient-to-r from-blue-500 to-purple-500 rounded-lg flex items-center justify-center flex-shrink-0">
						<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"></path>
						</svg>
					</div>
					if list.IsPublic {
						<span class="px-2 py-1 text-xs font-medium bg-green-100 text-green-700 dark:bg-green-900/30 dark:text-green-400 rounded">
							Public
						</span>
					}
				</div>
				<!-- Unsave button -->
				<button
					hx-delete={ "/lists/" + list.ID.String() + "/unsave" }
					hx-confirm="Are you sure you want to unsave this list?"
					hx-target="closest .bg-card"
					hx-swap="outerHTML swap:0.3s"
					class="p-2 text-muted-foreground hover:text-red-600 hover:bg-red-50 dark:hover:bg-red-900/20 rounded-lg transition-colors"
					title="Unsave list"
				>
					<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
						<path d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"></path>
					</svg>
				</button>
			</div>
			<a href={ templ.SafeURL("/lists/" + list.ID.String()) } class="block group">
				<div class="space-y-3">
					<h3 class="font-semibold text-card-foreground group-hover:text-blue-600 transition-colors line-clamp-2">
						{ list.Name }
					</h3>
					if list.Description != "" {
						<p class="text-sm text-muted-foreground line-clamp-2">
							{ list.Description }
						</p>
					} else {
						<p class="text-sm text-muted-foreground italic">
							No description
						</p>
					}
					<div class="flex items-center justify-between text-xs text-muted-foreground pt-3 border-t border-border">
						<span>
							{ fmt.Sprintf("%d", list.ItemCount) }
							if list.ItemCount == 1 {
								item
							} else {
								items
							}
						</span>
						<span>Saved { formatRelativeTime(list.UpdatedAt) }</span>
					</div>
				</div>
			</a>
		</div>
	</div>
}

// SaveListButton component for adding save button to list detail pages
templ SaveListButton(listID uuid.UUID, isSaved bool) {
	if isSaved {
		<button
			hx-delete={ "/lists/" + listID.String() + "/unsave" }
			hx-swap="outerHTML"
			class="flex items-center gap-2 px-4 py-2 bg-blue-100 text-blue-700 dark:bg-blue-900/30 dark:text-blue-400 rounded-lg hover:bg-blue-200 dark:hover:bg-blue-900/50 transition-colors"
		>
			<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
				<path d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"></path>
			</svg>
			<span>Saved</span>
		</button>
	} else {
		<button
			hx-post={ "/lists/" + listID.String() + "/save" }
			hx-swap="outerHTML"
			class="flex items-center gap-2 px-4 py-2 border border-border rounded-lg hover:bg-accent transition-colors"
		>
			<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"></path>
			</svg>
			<span>Save List</span>
		</button>
	}
}
