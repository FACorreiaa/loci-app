package recents

templ RecentsPage() {
	<div class="min-h-screen bg-gradient-to-br from-blue-50 via-white to-purple-50 dark:from-gray-900 dark:via-gray-800 dark:to-gray-900">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-8 pb-16">
			
			<!-- Header -->
			<div class="mb-8">
				<div class="flex items-center justify-between mb-6">
					<div class="flex items-center gap-3">
						<div class="w-10 h-10 bg-gradient-to-r from-indigo-500 to-purple-600 rounded-lg flex items-center justify-center">
							<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
							</svg>
						</div>
						<div>
							<h1 class="text-2xl font-bold text-foreground">Recent Activity</h1>
							<p class="text-muted-foreground">Your travel history and recent discoveries</p>
						</div>
					</div>
					
					<div class="flex items-center gap-3">
						<!-- Time Filter -->
						<select class="px-3 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent bg-background text-sm">
							<option value="today">Today</option>
							<option value="week" selected>This Week</option>
							<option value="month">This Month</option>
							<option value="year">This Year</option>
							<option value="all">All Time</option>
						</select>
						
						<button class="px-4 py-2 border rounded-lg hover:bg-accent transition-colors text-sm">
							<svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
							</svg>
							Export
						</button>
					</div>
				</div>
			</div>

			<!-- Activity Timeline -->
			<div class="space-y-6">
				
				<!-- Today -->
				<div class="bg-card rounded-xl shadow-sm border p-6">
					<h3 class="text-lg font-semibold text-card-foreground mb-4 flex items-center gap-2">
						<div class="w-2 h-2 bg-green-500 rounded-full"></div>
						Today
					</h3>
					<div class="space-y-4">
						@RecentActivityItem("Added to favorites", "Eleven Madison Park", "Restaurant • New York, NY", "2 hours ago", "🌱", "add")
						@RecentActivityItem("Searched for", "Best pizza in Brooklyn", "Search query", "4 hours ago", "🔍", "search")
						@RecentActivityItem("Viewed details", "Central Park", "Activity • New York, NY", "6 hours ago", "🌳", "view")
					</div>
				</div>

				<!-- Yesterday -->
				<div class="bg-card rounded-xl shadow-sm border p-6">
					<h3 class="text-lg font-semibold text-card-foreground mb-4 flex items-center gap-2">
						<div class="w-2 h-2 bg-blue-500 rounded-full"></div>
						Yesterday
					</h3>
					<div class="space-y-4">
						@RecentActivityItem("Visited", "Brooklyn Bridge", "Attraction • New York, NY", "Yesterday, 3:30 PM", "🌉", "visit")
						@RecentActivityItem("Created list", "NYC Food Tour", "8 restaurants added", "Yesterday, 11:15 AM", "📝", "create")
						@RecentActivityItem("Shared list", "Weekend in Paris", "Shared with 3 friends", "Yesterday, 9:20 AM", "🗼", "share")
					</div>
				</div>

				<!-- This Week -->
				<div class="bg-card rounded-xl shadow-sm border p-6">
					<h3 class="text-lg font-semibold text-card-foreground mb-4 flex items-center gap-2">
						<div class="w-2 h-2 bg-purple-500 rounded-full"></div>
						Earlier This Week
					</h3>
					<div class="space-y-4">
						@RecentActivityItem("Booked", "The Plaza Hotel", "Hotel • New York, NY", "2 days ago", "🏨", "book")
						@RecentActivityItem("Added review", "Joe's Pizza", "4.5 stars • \"Amazing NY slice!\"", "3 days ago", "🍕", "review")
						@RecentActivityItem("Discovered", "High Line Park", "Activity • New York, NY", "4 days ago", "🚶", "discover")
						@RecentActivityItem("Updated list", "Hidden NYC Gems", "Added 3 new places", "5 days ago", "🏙️", "update")
						@RecentActivityItem("Searched for", "Rooftop bars Manhattan", "Search query", "6 days ago", "🔍", "search")
					</div>
				</div>

				<!-- Load More -->
				<div class="text-center">
					<button 
						hx-get="/recents/load-more"
						hx-target="#load-more-container"
						hx-swap="outerHTML"
						class="px-6 py-3 border rounded-lg hover:bg-accent transition-colors text-sm font-medium"
					>
						Load Earlier Activity
					</button>
				</div>
				<div id="load-more-container"></div>
			</div>
		</div>
	</div>
}

templ RecentActivityItem(action, title, details, time, emoji, activityType) {
	<div class="flex items-start gap-4 p-4 hover:bg-accent rounded-lg transition-colors cursor-pointer">
		<div class="flex-shrink-0">
			<div class={ "w-12 h-12 rounded-full flex items-center justify-center",
				templ.KV("bg-green-100 dark:bg-green-900/30", activityType == "add" || activityType == "visit"),
				templ.KV("bg-blue-100 dark:bg-blue-900/30", activityType == "view" || activityType == "search" || activityType == "book"),
				templ.KV("bg-purple-100 dark:bg-purple-900/30", activityType == "create" || activityType == "share"),
				templ.KV("bg-orange-100 dark:bg-orange-900/30", activityType == "review" || activityType == "update"),
				templ.KV("bg-gray-100 dark:bg-gray-900/30", activityType == "discover") }>
				<span class="text-xl">{ emoji }</span>
			</div>
		</div>
		<div class="flex-1 min-w-0">
			<div class="flex items-start justify-between">
				<div>
					<p class="text-sm text-card-foreground">
						<span class="font-medium">{ action }</span> { title }
					</p>
					<p class="text-sm text-muted-foreground mt-1">{ details }</p>
					<p class="text-xs text-muted-foreground mt-2">{ time }</p>
				</div>
				<button class="p-1 text-muted-foreground hover:text-foreground transition-colors">
					<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z"></path>
					</svg>
				</button>
			</div>
		</div>
	</div>
}