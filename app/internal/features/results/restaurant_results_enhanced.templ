		<div class="text-center">
			<svg class="w-16 h-16 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"></path>
			</svg>
			<p class="text-gray-500 dark:text-gray-400">Restaurant map view coming soon</p>
			if cityData != nil {
				<p class="text-sm text-gray-400 dark:text-gray-500 mt-2">Showing { fmt.Sprintf("%d", len(restaurants)) } restaurants in { cityData.City }</p>
			} else {
				<p class="text-sm text-gray-400 dark:text-gray-500 mt-2">Showing { fmt.Sprintf("%d", len(restaurants)) } restaurants in this area</p>
			}
		</div>
	</div>
}

// Utility functions
func formatRestaurantRating(rating float64) string {
	if rating == float64(int(rating)) {
		return fmt.Sprintf("%.0f", rating)
	}
	return fmt.Sprintf("%.1f", rating)
}

func getRestaurantPriceColor(priceRange string) string {
	switch strings.ToLower(priceRange) {
	case "free", "$":
		return "text-green-600"
	case "budget", "$$":
		return "text-blue-600"
	case "moderate", "$$$":
		return "text-orange-600"
	case "expensive", "$$$$":
		return "text-red-600"
	default:
		return "text-gray-600"
	}
}

func getStateProvince(province string) string {
	if province != "" {
		return ", " + province
	}
	return ""
}

func getUniqueRestaurantCategories(restaurants []models.RestaurantDetailedInfo) string {
	categoryMap := make(map[string]bool)
	for _, restaurant := range restaurants {
		if restaurant.Category != "" {
			categoryMap[restaurant.Category] = true
		}
	}
	return fmt.Sprintf("%d", len(categoryMap))
}

func restaurantsPage() interface{} {
	// This would be implemented in a separate Alpine.js state file
	return map[string]interface{}{
		"viewMode": "list",
		"showChat": false,
	}
}