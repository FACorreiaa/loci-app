// RestaurantListCard for the list view section
templ RestaurantListCard(restaurant models.RestaurantDetailedInfo) {
	<div class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg p-4 hover:shadow-md transition-shadow">
		<div class="flex items-start justify-between mb-3">
			<h4 class="font-semibold text-gray-900 dark:text-white line-clamp-1">{ restaurant.Name }</h4>
			if restaurant.Rating > 0 {
				<div class="flex items-center gap-1 flex-shrink-0">
					<svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
						<path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
					</svg>
					<span class="text-sm font-medium text-gray-700 dark:text-gray-300">{ formatRestaurantRating(restaurant.Rating) }</span>
				</div>
			}
		</div>
		if restaurant.Category != "" {
			<span class="inline-block px-2 py-1 text-xs font-medium bg-orange-100 text-orange-800 dark:bg-orange-900 dark:text-orange-300 rounded-full mb-2">
				{ restaurant.Category }
			</span>
		}
		<p class="text-sm text-gray-600 dark:text-gray-300 line-clamp-3 mb-3">{ restaurant.Description }</p>
		<div class="flex items-center justify-between">
			<div class="flex items-center gap-4 text-xs text-gray-500 dark:text-gray-400">
				if restaurant.Address != nil {
					<span>{ *restaurant.Address }</span>
				}
				if restaurant.PriceLevel != nil && *restaurant.PriceLevel != "" {
					<span class={ getRestaurantPriceColor(*restaurant.PriceLevel) }>{ *restaurant.PriceLevel }</span>
				}
			</div>
			<button class="text-orange-600 hover:text-orange-700 text-sm font-medium">
				View Menu
			</button>
		</div>
	</div>
}

// RestaurantGridCard for the grid view
