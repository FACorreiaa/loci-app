func formatRating(rating float64) string {
	if rating == float64(int(rating)) {
		return fmt.Sprintf("%.0f", rating)
	}
	return fmt.Sprintf("%.1f", rating)
}

func minInt(a, b int) int {
	if a < b {
		return a
	}
	return b
}

