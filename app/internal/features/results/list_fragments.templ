// RestaurantsList renders a list of restaurant cards for HTMX swapping
templ RestaurantsList(restaurants []models.RestaurantDetailedInfo) {
	<div class="space-y-4" id="results-list">
		for i, restaurant := range restaurants {
			@FilteredRestaurantCard(restaurant, i+1)
		}
		if len(restaurants) == 0 {
			@EmptyState("restaurants")
		}
	</div>
}

