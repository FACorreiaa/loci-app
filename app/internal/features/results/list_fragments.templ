// EmptyState renders an empty state message
templ EmptyState(domain string) {
	<div class="text-center py-12">
		<svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
			<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path>
		</svg>
		<h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-white">No results found</h3>
		<p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
			Try adjusting your filters to see more { domain }.
		</p>
	</div>
}

// EmptyFilterResults renders an empty state when cache is not found
templ EmptyFilterResults(domain string) {
	<div class="text-center py-12">
		<svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
			<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
		</svg>
		<h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-white">Unable to filter</h3>
		<p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
			Please refresh the page and try again.
		</p>
	</div>
}
