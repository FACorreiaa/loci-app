				</div>
				<!-- Quick Stats -->
				<div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8">
					<div class="bg-card rounded-xl p-4 border">
						<div class="flex items-center justify-between">
							<div>
								<p class="text-sm text-muted-foreground">Total Lists</p>
								<p class="text-2xl font-bold text-card-foreground">8</p>
							</div>
							<svg class="w-8 h-8 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
							</svg>
						</div>
					</div>
					<div class="bg-card rounded-xl p-4 border">
						<div class="flex items-center justify-between">
							<div>
								<p class="text-sm text-muted-foreground">Total Items</p>
								<p class="text-2xl font-bold text-card-foreground">156</p>
							</div>
							<svg class="w-8 h-8 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
							</svg>
						</div>
					</div>
					<div class="bg-card rounded-xl p-4 border">
						<div class="flex items-center justify-between">
							<div>
								<p class="text-sm text-muted-foreground">Shared Lists</p>
								<p class="text-2xl font-bold text-card-foreground">3</p>
							</div>
							<svg class="w-8 h-8 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
							</svg>
						</div>
					</div>
				</div>
			</div>
			<!-- Lists Grid -->
			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
				@ListCard("Weekend in Paris", "12 places", "Perfect 2-day itinerary for Paris first-timers", "ğŸ—¼", "public", "2 days ago")
				@ListCard("Tokyo Food Adventure", "8 restaurants", "Must-try dining experiences in Tokyo", "ğŸœ", "private", "1 week ago")
				@ListCard("NYC Hidden Gems", "15 places", "Local favorites off the beaten path", "ğŸ™ï¸", "shared", "3 days ago")
				@ListCard("California Coast Road Trip", "22 stops", "Epic coastal drive from SF to LA", "ğŸŒŠ", "public", "5 days ago")
				@ListCard("London Museums", "6 museums", "Art and history lover's guide", "ğŸ›ï¸", "private", "2 weeks ago")
				@ListCard("Barcelona Tapas Crawl", "10 bars", "Best tapas spots in the Gothic Quarter", "ğŸ·", "shared", "4 days ago")
			</div>
		</div>
	</div>
	<div id="modal-container"></div>
}

templ ListCard(title string, itemCount string, description string, emoji string, privacy string, lastUpdated string) {
	<div class="bg-card rounded-xl shadow-sm border hover:shadow-md transition-shadow group cursor-pointer">
		<div class="p-6">
			<div class="flex items-start justify-between mb-4">
				<div class="flex items-center gap-3">
					<span class="text-3xl">{ emoji }</span>
					<div class="flex items-center gap-2">
						<span
							class={ "inline-flex items-center px-2 py-1 rounded-full text-xs font-medium",
							templ.KV("bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-300", privacy == "public"),
							templ.KV("bg-gray-100 text-gray-800 dark:bg-gray-900/30 dark:text-gray-300", privacy == "private"),
							templ.KV("bg-blue-100 text-blue-800 dark:bg-blue-900/30 dark:text-blue-300", privacy == "shared") }
						>
							{ privacy }
						</span>
					</div>
				</div>
				<div class="flex items-center gap-1">
					<button class="p-1.5 text-muted-foreground hover:text-foreground rounded-lg hover:bg-accent transition-colors">
						<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z"></path>
						</svg>
					</button>
				</div>
			</div>
			<div class="space-y-3">
				<h3 class="font-semibold text-card-foreground group-hover:text-blue-600 transition-colors">
					{ title }
				</h3>
				<p class="text-sm text-muted-foreground">
					{ description }
				</p>
				<div class="flex items-center justify-between text-xs text-muted-foreground">
					<span>{ itemCount }</span>
					<span>Updated { lastUpdated }</span>
				</div>
			</div>
			<div class="flex items-center justify-between mt-4 pt-4 border-t border-border">
				<button class="text-blue-600 hover:text-blue-700 text-sm font-medium">
					View List
				</button>
				<div class="flex items-center gap-2">
					<button class="text-muted-foreground hover:text-foreground text-sm">
						Share
					</button>
					<button class="text-muted-foreground hover:text-foreground text-sm">
						Edit
					</button>
				</div>
			</div>
		</div>
	</div>
}
